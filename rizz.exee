body {
  background: linear-gradient(to right, #8B0000, #FF0000);
  color: white;
  font-family: 'Arial', sans-serif;
  text-align: center;
  padding: 40px;
}

.container {
  max-width: 600px;
  margin: auto;
  padding: 20px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  box-shadow: 0 0 20px #ffcccc;
}

h1 {
  font-size: 2.5em;
  margin-bottom: 20px;
}

.timer {
  font-size: 1.2em;
  margin: 15px 0;
}

button {
  background-color: #FF3366;
  border: none;
  padding: 12px 24px;
  font-size: 1em;
  border-radius: 8px;
  color: white;
  cursor: pointer;
  transition: background 0.3s;
}

button:hover {
  background-color: #cc2952;
}

.hidden {
  display: none;
  margin-top: 30px;
}

.hearts {
  font-size: 2em;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}
function showSurprise() {
  document.getElementById('surprise').classList.remove('hidden');
}

function updateTimer() {
  const startDate = new Date("2024-06-04T00:00:00");
  const now = new Date();
  const diff = now - startDate;

  const seconds = Math.floor((diff / 1000) % 60);
  const minutes = Math.floor((diff / 1000 / 60) % 60);
  const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
  const days = Math.floor(diff / (1000 * 60 * 60 * 24));
  const months = Math.floor(days / 30);
  const years = Math.floor(months / 12);

  const timerText = `${years} years, ${months % 12} months, ${days % 30} days, ${hours} hours, ${minutes} minutes, ${seconds} seconds`;
  document.getElementById('timer').textContent = "Loving you since: " + timerText;
}

setInterval(updateTimer, 1000);
